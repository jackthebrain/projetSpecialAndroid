<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserProfileActivity">
    <LinearLayout
        android:id="@+id/linearColumnarrowleft"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/_22pxv"
        android:layout_weight="0.95"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/profilPic"
            android:layout_width="134dp"
            android:layout_height="134dp"
            app:srcCompat="@drawable/img_rectangle8"
            android:layout_gravity="center"
            android:layout_marginTop="38dp"
            android:layout_marginEnd="69dp"
            android:layout_marginStart="60dp"/>

        <TextView
            android:id="@+id/username"
            style="@style/txtPoppinssemibold16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/_109pxh"
            android:layout_marginTop="@dimen/_22pxv"
            android:layout_marginEnd="@dimen/_109pxh"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="Haany"
            android:textSize="14sp"
            />

        <TextView
            android:id="@+id/fullName"
            style="@style/txtPoppinsmedium14_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_10pxh"
            android:layout_marginTop="@dimen/_56pxv"
            android:layout_marginEnd="@dimen/_10pxh"
            android:ellipsize="end"
            android:gravity="start"
            android:singleLine="true"
            android:text="CHERIF Hani Salah Eddine"
            android:textSize="14sp"
            />

        <TextView
            android:id="@+id/email"
            style="@style/txtPoppinsmedium14_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_10pxh"
            android:layout_marginTop="@dimen/_21pxv"
            android:layout_marginEnd="@dimen/_10pxh"
            android:ellipsize="end"
            android:gravity="start"
            android:singleLine="true"
            android:text="hanisalaheddine.cherif@gmail.com"
            android:textSize="14sp"
            />

        <TextView
            android:id="@+id/gender"
            style="@style/txtPoppinsmedium14_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginStart="@dimen/_10pxh"
            android:layout_marginTop="@dimen/_18pxv"
            android:layout_marginEnd="@dimen/_10pxh"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="Man"
            android:textSize="14sp"
            />

        <TextView
            android:id="@+id/phonenum"
            style="@style/txtPoppinsmedium14_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginStart="@dimen/_10pxh"
            android:layout_marginTop="@dimen/_19pxv"
            android:layout_marginEnd="@dimen/_10pxh"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="0555555555"
            android:textSize="14sp"
            />
        <androidx.appcompat.widget.AppCompatButton
            android:ellipsize="end"
            android:gravity="center"
            android:id="@+id/btn_add_car"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_20pxv"
            android:layout_marginEnd="@dimen/_12pxh"
            android:layout_marginStart="@dimen/_10pxh"
            android:layout_marginTop="@dimen/_90pxv"
            android:layout_width="match_parent"
            android:paddingBottom="@dimen/_14pxv"
            android:paddingEnd="@dimen/_30pxh"
            android:paddingStart="@dimen/_30pxh"
            android:paddingTop="@dimen/_14pxv"
            android:singleLine="true"
            android:textAllCaps="true"
            style="@style/btnSolidRounded"
            android:text="add car"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>